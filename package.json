{
  "name": "core-routing",
  "version": "0.0.1",
  "description": "Framework agnostic interface for client sided routing using HTML5 history api.",
  "main": "index.js",
  "scripts": {
    "lint": "npx tslint src/**.ts && npx eslint __test__/**.js && npx prettier-tslint check './src/**/**.ts'",
    "pretty": "npx prettier-tslint fix './src/**/**.ts'",
    "bundle": "npx parcel build src/router.ts --global Router --target browser",
    "test": "node_modules/.bin/jest --coverage",
    "build": "npm run lint && npm run bundle && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neetjn/core-routing.git"
  },
  "keywords": [
    "html5",
    "client",
    "routing",
    "router"
  ],
  "author": "John Nolette <john@neetgroup.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/neetjn/core-routing/issues"
  },
  "homepage": "https://github.com/neetjn/core-routing#readme",
  "devDependencies": {
    "@types/node": "^12.7.4",
    "eslint": "^6.3.0",
    "jest": "^24.9.0",
    "jest-dom": "^4.0.0",
    "parcel": "^1.12.3",
    "prettier": "^1.18.2",
    "prettier-tslint": "^0.4.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.2",
    "typescript-memoize": "^1.0.0-alpha.3"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "verbose": true
  }
}
